// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique(map: "users_username_unique")
  name      String?
  avatarUrl String?
  bio       String?
  location  String?
  company   String?
  blog      String?
  followers Int      @default(0)
  following Int      @default(0)
  publicRepos Int    @default(0)
  totalStars  Int    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([username], map: "users_username_composite_unique")
  @@index([totalStars])
  @@index([followers])
  @@index([createdAt])
  @@map("users")
}

model Repository {
  id          String   @id @default(cuid())
  name        String
  fullName    String   @unique(map: "repositories_fullName_unique")
  owner       String
  description String?
  language    String?
  stars       Int      @default(0)
  forks       Int      @default(0)
  watchers    Int      @default(0)
  openIssues  Int      @default(0)
  size        Int      @default(0)
  isPrivate   Boolean  @default(false)
  htmlUrl     String   @unique(map: "repositories_htmlUrl_unique")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name, owner], map: "repositories_name_owner_unique")
  @@unique([fullName], map: "repositories_fullName_composite_unique")
  @@unique([htmlUrl], map: "repositories_htmlUrl_composite_unique")
  @@index([stars])
  @@index([forks])
  @@index([language])
  @@index([owner])
  @@index([createdAt])
  @@map("repositories")
}

model Topic {
  id          String   @id @default(cuid())
  name        String   @unique(map: "topics_name_unique")
  displayName String?
  description String?
  featured    Boolean  @default(false)
  curated     Boolean  @default(false)
  score       Float    @default(0)
  repositories Int     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([name], map: "topics_name_composite_unique")
  @@index([score])
  @@index([featured])
  @@index([repositories])
  @@index([createdAt])
  @@map("topics")
}
